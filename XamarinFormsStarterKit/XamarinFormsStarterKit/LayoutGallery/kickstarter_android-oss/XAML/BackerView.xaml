            <BoxView AbsoluteLayout.LayoutBounds=".95,.5,AutoSize,AutoSize" AbsoluteLayout.LayoutFlags="PositionProportional" />
         </AbsoluteLayout>
         <ScrollView FlexLayout.Grow="15">
            <FlexLayout AlignItems="Stretch" Direction="Column">
               <BoxView Margin="20" FlexLayout.Grow="3" />
               <FlexLayout Margin="20" FlexLayout.Grow="3" Direction="Column">
                  <BoxView FlexLayout.Grow="1" />
                  <BoxView FlexLayout.Grow="1" />
                  <BoxView FlexLayout.Grow="1" />
               </FlexLayout>
            </FlexLayout>
         </ScrollView>
         <FlexLayout FlexLayout.Grow="1.5" />
      </FlexLayout>
   </ContentPage.Content>
</ContentPage>